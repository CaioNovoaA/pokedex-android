<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivPokemon"
        android:background="@drawable/OIP"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="Pokemon Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_magrinStart="30dp"
        android:text="@string/n_001"
        android:textColor="#919191"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPokemon"
        tools:text="NÂº 001" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_magrinStart="30dp"
        android:text="@string/n_001"
        android:textColor="#313131"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNumber"
        tools:text="Charmander" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_magrinStart="96dp"
        android:layout_marginLeft="96dp"
        >
    <TextView
        android:id="@+id/tvType1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#Fd7d24"
        android:gravity="center_horizontal"
        android:text="@string/n_001"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        tools:text="Fire" />
        <TextView
            android:id="@+id/tvType2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="#Fd7d24"
            android:gravity="center_horizontal"
            android:text="@string/n_001"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            tools:text="Fire" />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>